{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "JOML",
	"patterns": [
		{
			"include": "#comment"
		},
		{
			"include": "#key-value-pairs"
		}
	],
	"repository": {
		"key-value-pairs": {
			"patterns": [
				{
					"include": "#key"
				},
				{
					"name": "meta.structure.value.joml",
					"begin": "(?<=:)",
					"end": "(?=,|}|$|\\n|#)",
					"patterns": [
						{
							"include": "#value"
						}
					]
				},
				{
					"include": "#comment"
				}
			]
		},
		"key": {
			"patterns": [
				{
					"name": "keyword.key.unquoted.joml",
					"match": "[^\":#{,\\[\\s][^\":#]*(?=:)"
				},
				{
					"name": "keyword.key.quoted.joml",
					"begin": "\"",
					"end": "(?<!\\\\)\"",
					"patterns": [
						{
							"name": "constant.character.escape.joml",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"array": {
			"name": "meta.structure.array.joml",
			"begin": "\\[",
			"end": "\\]",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"match": ",|\\n"
				},
				{
					"include": "#comment"
				}
			]
		},
		"dictionary": {
			"name": "meta.structure.dictionary.joml",
			"begin": "{",
			"end": "}",
			"patterns": [
				{
					"include": "#key-value-pairs"
				}
			]
		},
		"value": {
			"patterns": [
				{
					"name": "support.type.annotation.joml",
					"match": "\\([^)]+\\)"
				},
				{
					"include": "#string"
				},
				{
					"include": "#dictionary"
				},
				{
					"include": "#array"
				},
				{
					"include": "#constant"
				}
			]
		},
		"string": {
			"name": "string.quoted.double.joml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.joml",
					"match": "\\\\.|\\\\\\n"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"name": "constant.null.joml",
					"match": "\\bnull\\b"
				},
				{
					"name": "constant.boolean.joml",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.float.special.joml",
					"match": "[+-]?(inf|nan)"
				},
				{
					"name": "constant.numeric.float.joml",
					"match": "[+-]?(([0-9]+\\.[0-9]*)|(\\.[0-9]+))([eE][-+]?[0-9]+)?|[+-]?[0-9]+[eE][+-]?[0-9]+"
				},
				{
					"name": "constant.numeric.integer.binary.joml",
					"match": "[+-]?0b[01]+"
				},
				{
					"name": "constant.numeric.integer.octal.joml",
					"match": "[+-]?0o[0-7]+"
				},
				{
					"name": "constant.numeric.integer.hexadecimal.joml",
					"match": "[+-]?0x[0-9a-fA-F]+"
				},
				{
					"name": "constant.numeric.integer.decimal.joml",
					"match": "[+-]?[0-9]+"
				}
			]
		},
		"comment": {
			"name": "comment.line.joml",
			"begin": "#",
			"end": "\\n"
		}
	},
	"scopeName": "source.joml"
}
