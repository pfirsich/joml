{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "JOML",
	"patterns": [
		{
			"include": "#key-value-pairs"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"key-value-pairs": {
			"patterns": [
				{
					"begin": "(?=\")",
					"end": "(?=\")",
					"name": "meta.structure.dictionary.key.quoted.joml",
					"patterns": [
						{
							"include": "#string"
						}
					]
				},
				{
					"begin": "[^{[,]",
					"end": "(?=:)",
					"name": "meta.structure.dictionary.key.unquoted.joml"
				},
				{
					"begin": "(?=:\\s*)",
					"end": "(?=[\\s\\n]*})|(,)|(?=})",
					"patterns": [
						{
							"include": "value"
						}
					]
				}
			]
		},
		"value": {
			"patterns": [
				{
					"include": "constant"
				},
				{
					"include": "string"
				},
				{
					"include": "array"
				},
				{
					"include": "dictionary"
				}
			]
		},
		"keys": {
			"patterns": [
				{
					"name": "keyword.key.unquoted.joml",
					"match": "(?<=^|{|\\(|,)\\s*[^:\n\"#]+(?=:)",
					"_match": "[^:]+"
				},
				{
					"name": "keyword.key.quoted.joml",
					"_begin": "\\b\"",
					"_end": "\":",
					"match": "(^|\\s)\"([^\"]|\\\\\")+\"(?=:)",
					"patterns": [
						{
							"name": "constant.character.escape.joml",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.joml",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.joml",
					"match": "\\\\.|\\\\\\n"
				}
			]
		},
		"constant": {
			"patterns": [
				{
					"name": "constant.null.joml",
					"match": "\\bnull\\b"
				},
				{
					"name": "constant.boolean.joml",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "constant.numeric.float.special.joml",
					"match": "[+-]?(inf|nan)"
				},
				{
					"name": "constant.numeric.float.joml",
					"match": "[+-]?(([0-9]+\\.[0-9]*)|(\\.[0-9]+))([eE][-+]?[0-9]+)?|[+-]?[0-9]+[eE][+-]?[0-9]+"
				},
				{
					"name": "constant.numeric.integer.binary.joml",
					"match": "[+-]?0b[01]+"
				},
				{
					"name": "constant.numeric.integer.octal.joml",
					"match": "[+-]?0o[0-7]+"
				},
				{
					"name": "constant.numeric.integer.hexadecimal.joml",
					"match": "[+-]?0x[0-9a-fA-F]+"
				},
				{
					"name": "constant.numeric.integer.decimal.joml",
					"match": "[+-]?[0-9]+"
				}
			]
		},
		"array": {
			"begin": "\\[",
			"end": "[\\s\\n]*\\]",
			"name": "meta.structure.array.joml",
			"patterns": [
				{
					"include": "#value"
				},
				{
					"match": ",|\\n"
				}
			]
		},
		"dictionary": {
			"begin": "{",
			"end": "}",
			"name": "meta.structure.dictionary.joml",
			"patterns": [
				{
					"include": "#key-value-pairs"
				}
			]
		},
		"comments": {
			"name": "comment.line.joml",
			"begin": "#",
			"end": "\\n"
		}
	},
	"scopeName": "source.joml"
}
